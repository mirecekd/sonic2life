# AWS credentials (access key / secret key for Docker – no profile support)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SESSION_TOKEN=  (only set if using temporary credentials; leave commented out for permanent IAM keys)
AWS_REGION=eu-north-1

# Nova 2 Sonic
NOVA_SONIC_MODEL_ID=amazon.nova-2-sonic-v1:0
NOVA_SONIC_VOICE_ID=matthew

# Gemini Live API (optional – for Google voice engine)
GEMINI_API_KEY=your-api-key
GEMINI_MODEL_ID=gemini-2.5-flash-native-audio-preview-12-2025
GEMINI_VOICE_ID=Puck

# Server
HOST=0.0.0.0
PORT=5005

# VAD (Voice Activity Detection)
VAD_SILENCE_TIMEOUT_MS=3000    # silence duration before auto-send (ms)
VAD_SILENCE_THRESHOLD=0.01     # RMS threshold below which audio is "silence" (0.0-1.0)
